{{!-- create a new party --}}
<div class="row mt-4">
<form id="new-party-on-form">
    <h3>Make a New Party</h3>

    <div class="form-group input-group-lg row">
      <label for="party-name">Party Name</label>
      <input
        type="text"
        class="form-control"
        id="party-name"
        placeholder="name your party"
      />
    </div>

    <div class="form-group input-group-lg row" >
      <label for="description">Description</label>
      <input
        type="text"
        class="form-control"
        id="description"
        placeholder="description"
      />
    </div>
{{!-- I do not know why the background did not change with this one. the class is form-group. I meant the apply it to the login as well. feel free to change it back or the colors in general. --}}
    <div class="form-group input-group-lg row">
        <label for="calendar" class="form-label">Select date and time for your party</label>
        <input
          class="form-control"
          placeholder="pick date & time"
          id="party-date"
        />
      </div>
      <div>
      <button type="submit">Create Party</button>
    </div>
</form>
 </div>
{{!-- show the parties for the login user --}}
{{#each parties as |party| }}
 <div class="card justify-space-between">
  <div class="col">
 <h3 class="card-title text-center"  id="margin">{{name}}</h3>
 </div>
  <div class="col"><h4 class="text-center">Party created by: {{user.name}}</h4>
    <div class="col"> <p class="text-center">{{description}}</p>
      <div class="col"><p class="text-center">{{format_date party_date}} {{format_time party_date}}</p>
    
    <button class="cancel-button" data-id={{id}} onclick="deleteParty(event)">Cancel Party?</button>
    </div>
    </div>
  </div>
  
  </div>
{{/each}}

